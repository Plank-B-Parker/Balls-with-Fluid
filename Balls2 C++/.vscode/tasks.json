{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Task",
			"osx":{
				"command": "/usr/bin/g++",
				"args": [
					"-fdiagnostics-color=always",
					"-o",
					"fluid.exe",
					"-Isrc",
					"-IDependencies/GLEW/include",
					"-IDependencies/GLFW/include",
					"-LDependencies/GLFW/lib/",
					"-LDependencies/GLEW/lib/Release/Mac",
					"-g",
					"src/**/*.cpp",
					"-framework",
					"OpenGL",
					"-lglfw",
					"-lglew"
				]
			},

			"windows":{
				"command": "/usr/bin/g++",
				"args": [
					"-fdiagnostics-color=always",
					"-o",
					"fluid.exe",
					"-Isrc",
					"-IDependencies/GLEW/include",
					"-IDependencies/GLFW/include",
					"-LDependencies/GLFW/lib/",
					"-LDependencies/GLEW/lib/Release/x64",
					"-g",
					"src/**/*.cpp",
					"-framework",
					"OpenGL",
					"-lglfw",
					"-lglew"
				]
			},
			
			"options": {
				"cwd": "${workspaceFolder}/Balls C++"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}